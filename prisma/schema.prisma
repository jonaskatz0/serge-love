generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  name      String?
  plan      Plan     @default(FREE)
  credits   Int      @default(3)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  videos    Video[]
  apiKeys   ApiKey[]
}

enum Plan {
  FREE
  PRO
  AGENCY
}

model Video {
  id           String      @id @default(cuid())
  userId       String
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  title        String
  status       VideoStatus @default(PROCESSING)
  aiModel      String
  actorId      String
  scriptText   String?
  videoUrl     String?
  thumbnailUrl String?
  kieTaskId    String?
  views        Int         @default(0)
  duration     Int?
  format       String      @default("9:16")
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

enum VideoStatus {
  PROCESSING
  DONE
  FAILED
}

model ApiKey {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  model     String
  keyHash   String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  @@unique([userId, model])
}

model Actor {
  id         String  @id @default(cuid())
  name       String
  gender     String
  ethnicity  String
  style      String
  mood       String
  previewUrl String?
  gradient   String  @default("from-blue-400 to-purple-500")
  isActive   Boolean @default(true)
}
